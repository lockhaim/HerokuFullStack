<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>OnlyJams</title>
  </head>
  <body>
    <nav>
      <% if (currentUser) { %>
      <li>Welcome <%= currentUser.username %></li>
      <li>
        <form action="/sessions?_method=DELETE" method="POST">
          <input type="submit" value="Log Out" class="btn-small red" />
        </form>
      </li>
      <% } else { %>
      <li><a href="/users/new">Sign Up</a></li>
      <li><a href="/sessions/new">Log In</a></li>
      <% } %>
    </nav>
    <div class='whole-page'>
      <h1 id='main-header'>onlyJams Index Page</h1>
      <% for(let i = 0; i < artists.length; i++) { %>
        <a href='/onlyJams/<%=artists[i].id%>'><%=artists[i].name%><br/>
          <img class='artist-img' src='<%=artists[i].img%>'></img>
        </a><br/>
        <form action='/onlyJams/<%=artists[i].id%>/edit' method='GET'>
          <input type="submit" value="EDIT">
        </form>
        <form action='/onlyJams/<%=artists[i].id%>?_method=DELETE' method='POST'>
          <input type="submit" value="DELETE">
        </form>
      <% } %>
      <a href='/onlyjams/new'>Add a new artist!</a>
    </div>
  </body>
</html>
