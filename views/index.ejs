<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <title>OnlyJams</title>
    <%- include ('./partials/head.ejs') %>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <%- include ('./partials/nav.ejs') %>
    <h1 id='main-header'>onlyJams Index Page</h1>
    <div class='whole-page'>
      <img src='http://beamavisuals.com/wp-content/uploads/2016/03/Excision_XVision2012_IdentityFestRukes.jpg'>MAIN IMAGE</img>
      <% for(let i = 0; i < artists.length; i++) { %>
        <div class='flex-container'>
          <a class='artist-link' href='/onlyJams/<%=artists[i].id%>'>
            <h4><%=artists[i].name%></h4>
            <img class='artist-img' src='<%=artists[i].img%>'></img><br/>
          </a>
          <% if (currentUser) { %>
          <div class='button-container'>
            <a href='/onlyJams/<%=artists[i].id%>/edit' method='GET'>
              <input class='button' type="submit" href='/onlyJams/<%=artists[i].id%>/edit' value="EDIT">
            </a>
            <form action='/onlyJams/<%=artists[i].id%>?_method=DELETE' method='POST'>
              <input class='button' type="submit" value="DELETE">
            </form>
          </div>
          <% } %>
        </div>
      <% } %>
    </div>
    <div id='new-artist'>
      <a href='/onlyjams/new'>Add a new artist!</a>
    </div>
  </body>
</html>
